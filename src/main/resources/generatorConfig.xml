<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="filters/filter-dev.properties"/>

    <context id="mysql" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.connUrl}"
                        userId="${jdbc.userName}"
                        password="${jdbc.passWord}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.smikevon.easy.mbg.domain" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="generated" targetProject="src/main/resources/mappers">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <table tableName="entrustment">
            <property name="useActualColumnNames" value="true"/>
        </table>
    </context>

</generatorConfiguration>